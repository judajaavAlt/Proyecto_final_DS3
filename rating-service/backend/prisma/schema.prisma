generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Review {
  id        Int      @id @default(autoincrement())
  userId    Int      // ID del usuario que hizo la reseña
  movieId   Int      // ID único de la película
  text      String   // Contenido de la reseña
  rating    Float    // Puntuación de 1 a 5
  date      DateTime @default(now())
}

